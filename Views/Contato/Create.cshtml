@model Contatos
@{
    ViewData["Title"] = "Adicionar Contato";
}
<div class="">

    <h1 class="display-4">Cadastrar Contato</h1>

    <form asp-controller="Contato" asp-action="Create" method="post">

        <div class="form-group">
            <label for="nome">Nome</label>
            <input for="uppercase" type="text" asp-for="Nome" class="form-control">
            @Html.ValidationMessageFor(x => x.Nome)
        <div class="form-group">
            <label for="enderco">Endereço</label>
            <input type="text" asp-for="Endereco" class="form-control">
            @Html.ValidationMessageFor(x => x.Endereco)
        </div>
        <div class="form-group">
            <label for="celular">Celular</label>
            <input type="number" asp-for="Celular" class="form-control">
            @Html.ValidationMessageFor(x => x.Celular)
        </div>
        <div class="form-group">
            <label for="email">E-mail</label>
            <input type="email" asp-for="Email" class="form-control">
            @Html.ValidationMessageFor(x => x.Email)
        </div>
        <br/>
        <button type="submit" class="btn btn-primary" >Adicionar</button>
        <a class="btn btn-secondary" asp-controller="Contato" asp-action="Index" role="button"> Voltar</a>
    </form>

</div>
