@model Contatos
@{
    ViewData["Title"] = "Editar Contato";
}
<div class="">

    <h1 class="display-4">Casdastrar Contato</h1>

    <form asp-controller="Contato" asp-action="Edit" method="post">

        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label for="nome">Nome</label>
            <input type="text" asp-for="Nome" class="form-control">
        </div>
        <div class="form-group">
            <label for="enderco">Endereço</label>
            <input type="text" asp-for="Endereco" class="form-control">
        </div>
        <div class="form-group">
            <label for="celular">Celular</label>
            <input type="number" asp-for="Celular" class="form-control">
        </div>
        <div class="form-group">
            <label for="email">E-mail</label>
            <input type="email" asp-for="Email" class="form-control">
        </div>
        <br />
        <button type="submit" class="btn btn-primary">Alterar</button>
        <a class="btn btn-secondary" asp-controller="Contato" asp-action="Index"> Voltar</a>
    </form>

</div>
