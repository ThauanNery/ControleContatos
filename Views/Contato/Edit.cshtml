@model Contatos
@{
    ViewData["Title"] = "Editar Contato";
}
<div class="">
    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success" role="alert">
            <button type="button" class="btn btn-danger  btn-close" arial-label="close"></button>
            @TempData["MensagemSucesso"]
        </div>
    }
    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger" role="alert">
            A simple danger alert—check it out!
            <button type="button" class="btn btn-danger  btn-close" arial-label="close"></button>
            @TempData["MensagemErro"]
        </div>
    }

    <br />
    <h1 class="display-4">Casdastrar Contato</h1>

    <form asp-controller="Contato" asp-action="Update" method="post">

        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label for="nome">Nome</label>
            <input type="text" asp-for="Nome" class="form-control">
            @Html.ValidationMessageFor(x => x.Nome)
        </div>
        <div class="form-group">
            <label for="enderco">Endereço</label>
            <input type="text" asp-for="Endereco" class="form-control">
            @Html.ValidationMessageFor(x => x.Endereco)
        </div>
        <div class="form-group">
            <label for="celular">Celular</label>
            <input type="number" asp-for="Celular" class="form-control">
            @Html.ValidationMessageFor(x => x.Celular)
        </div>
        <div class="form-group">
            <label for="email">E-mail</label>
            <input type="email" asp-for="Email" class="form-control">
            @Html.ValidationMessageFor(x => x.Email)
        </div>
        <br />
        <button type="submit" class="btn btn-primary">Alterar</button>
        <a class="btn btn-secondary" asp-controller="Contato" asp-action="Index" role="button"> Voltar</a>
    </form>

</div>
